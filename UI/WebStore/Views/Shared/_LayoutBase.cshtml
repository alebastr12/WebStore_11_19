<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/prettyPhoto/css/prettyPhoto.css" rel="styleshe8et">

    <link href="~/css/price-range.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/animate.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true">

    <!--[if lt IE 9]>
    <script src="~/js/html5shiv.js"></script>
    <![endif]-->
    @RenderSection("Styles", false)
</head><!--/head-->
<body>
    @await Html.PartialAsync("Partial/_Header")

    @RenderBody()

    @await Html.PartialAsync("Partial/_Footer")

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>

    <script src="~/lib/prettyPhoto/js/jquery.prettyPhoto.js" asp-append-version="true"></script>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/js/Cart/CartLogic.js" asp-append-version="true"></script>

    <script>
        $(function() {
            Cart.init({
                getCartViewLink: "@Url.Action("GetCartView","Cart")",
                addToCartLink: "@Url.Action("AddToCartAPI","Cart")",
                decrementLink: "@Url.Action("DecrementFromCartAPI","Cart")",
                removeFromCartLink: "@Url.Action("RemoveFromCartAPI","Cart")",
                removeAllLink: "@Url.Action("ClearCartAPI","Cart")"
            });
        })
    </script>

    @RenderSection("Scripts", false)
</body>
</html>